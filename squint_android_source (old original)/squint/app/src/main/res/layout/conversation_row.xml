<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#EEEEEE"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/convauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:text="other_guy" />

    <TextView
        android:id="@+id/lastmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/convauthor"
        android:layout_below="@+id/convauthor"
        android:textColor="@color/tab_unselected"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:text="last_msg" />



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/lastmsg"
        android:background="#CC000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5" >
        <TextView
            android:id="@+id/lasttime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/lastmsg"
            android:layout_below="@+id/lastmsg"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:fontFamily="sans-serif-light"
            android:text="last_msg_time" />

        <View
            android:layout_width="150dip"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/unreadnotice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif"


            android:layout_marginRight="15dp"
            android:textColor="@color/list_action_text"
            android:text="new message" />




    </LinearLayout>

</RelativeLayout>
