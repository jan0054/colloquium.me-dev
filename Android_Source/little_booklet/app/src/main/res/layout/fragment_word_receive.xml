<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ashvale.littlebooklet.fragments.WordReceiveFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey_background">
        <EditText  android:id="@+id/search_input_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:hint="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:minWidth="120dp"
            android:maxWidth="260dp"
            style="@style/GreyTextInput"/>
        <EditText  android:id="@+id/search_input_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:hint="2"
            android:textSize="16sp"
            android:singleLine="true"
            android:minWidth="120dp"
            android:maxWidth="260dp"
            style="@style/GreyTextInput"
            android:layout_below="@+id/search_input_1"/>
        <EditText  android:id="@+id/search_input_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_margin"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:hint="3"
            android:textSize="16sp"
            android:singleLine="true"
            android:minWidth="120dp"
            android:maxWidth="260dp"
            style="@style/GreyTextInput"
            android:layout_below="@+id/search_input_2"/>
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/resultListView"
            android:divider="@color/divider_color"
            android:dividerHeight="0dp"
            android:layout_below="@+id/search_input_3"/>
    </RelativeLayout>
</FrameLayout>
