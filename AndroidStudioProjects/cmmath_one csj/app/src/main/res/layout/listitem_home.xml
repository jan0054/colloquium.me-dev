<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/feed_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:padding="@dimen/list_margin"
    android:gravity="start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageLabel"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/event"
        android:tint="@color/dark_accent"/>
    <TextView
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageLabel"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:text="@string/name"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageLabel"
        android:layout_below="@+id/eventName"
        android:fontFamily="sans-serif-light"
        android:gravity="center|start"
        android:text="@string/date"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/eventOrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/eventName"
        android:layout_below="@+id/eventName"
        android:gravity="center|bottom"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/organizer"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/eventContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageLabel"
        android:layout_below="@+id/eventTime"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/content"
        android:textColor="@color/dark_primary"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eventContent"
        android:gravity="end"
        android:fontFamily="sans-serif"
        android:text="@string/details"
        android:textColor="@color/dark_accent"
        android:textSize="12sp"/>

</RelativeLayout>
