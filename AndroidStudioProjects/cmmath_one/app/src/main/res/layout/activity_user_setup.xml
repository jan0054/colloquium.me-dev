<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_bg">
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/list_margin"
        android:gravity="left"
        android:text="@string/emaillabel"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <Switch
        android:id="@+id/email_switch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_margin="@dimen/list_margin"
        android:layout_toRightOf="@+id/email_label"
        android:layout_alignParentRight="true"
        android:text=""/>
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:layout_below="@+id/email_label"
          android:background="@color/light_primary" />
    <TextView
        android:id="@+id/event_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/email_label"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/list_margin"
        android:layout_gravity="center_vertical"
        android:text="@string/eventlabel"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>
    <Switch
        android:id="@+id/event_switch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_margin="@dimen/list_margin"
        android:layout_below="@+id/email_switch"
        android:layout_toRightOf="@+id/event_label"
        android:layout_alignParentRight="true"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/event_label"/>
    <TextView
        android:id="@+id/chat_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/event_label"
        android:layout_margin="@dimen/list_margin"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/chatlabel"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <Switch
        android:id="@+id/chat_switch"
        android:layout_height="@dimen/listheight_setup"
        android:layout_width="wrap_content"
        android:layout_below="@+id/event_switch"
        android:layout_margin="@dimen/list_margin"
        android:layout_toRightOf="@+id/chat_label"
        android:layout_alignParentRight="true"
        android:text=""/>
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:layout_below="@+id/chat_label"
          android:background="@color/light_primary" />
    <TextView
        android:id="@+id/fname_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/chat_label"
        android:layout_margin="@dimen/list_margin"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/firstname"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <EditText  android:id="@+id/fname_input"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/listheight_setup"
               android:layout_below="@+id/chat_switch"
               android:layout_toRightOf="@+id/fname_label"
               android:layout_margin="@dimen/list_margin"
               android:layout_alignParentRight="true"
               android:singleLine="true"
               android:minWidth="120dp"
               android:maxWidth="260dp" />
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:layout_below="@+id/fname_label"
          android:background="@color/light_primary" />
    <TextView
        android:id="@+id/lname_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/fname_label"
        android:layout_margin="@dimen/list_margin"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/lastname"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <EditText  android:id="@+id/lname_input"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/listheight_setup"
               android:layout_below="@+id/fname_input"
               android:layout_toRightOf="@+id/lname_label"
               android:layout_margin="@dimen/list_margin"
               android:layout_alignParentRight="true"
               android:singleLine="true"
               android:minWidth="120dp"
               android:maxWidth="260dp" />
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/light_primary" />
    <TextView
        android:id="@+id/inst_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/lname_label"
        android:layout_margin="@dimen/list_margin"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/institution"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <EditText  android:id="@+id/inst_input"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/listheight_setup"
               android:layout_below="@+id/lname_input"
               android:layout_toRightOf="@+id/inst_label"
               android:layout_margin="@dimen/list_margin"
               android:layout_alignParentRight="true"
               android:singleLine="true"
               android:minWidth="120dp"
               android:maxWidth="260dp" />
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/light_primary" />
    <TextView
        android:id="@+id/link_label"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listheight_setup"
        android:layout_below="@+id/inst_label"
        android:layout_margin="@dimen/list_margin"
        android:layout_alignParentLeft="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/website"
        android:layout_gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />
    <EditText  android:id="@+id/link_input"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/listheight_setup"
               android:layout_below="@+id/inst_input"
               android:layout_toRightOf="@+id/link_label"
               android:layout_margin="@dimen/list_margin"
               android:layout_alignParentRight="true"
               android:singleLine="true"
               android:minWidth="120dp"
               android:maxWidth="260dp" />

</RelativeLayout>
