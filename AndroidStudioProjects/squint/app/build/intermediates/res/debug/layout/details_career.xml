<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@drawable/stage"
			  android:orientation="vertical" >
	<LinearLayout android:id="@+id/feed_container"
			      android:layout_width="match_parent"
			      android:layout_height="wrap_content"
			      android:layout_margin="12dp"
			      android:background="@drawable/list_item"
			      android:orientation="vertical" >
		<View android:layout_width="match_parent"
		      android:layout_height="3dp"
		      android:background="@color/list_item_header" />
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center|left"
            android:text="Position available:"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/list_item_header"
            android:textSize="14sp" />
		<TextView
		    android:id="@+id/position"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:layout_marginTop="5dp"
		    android:fontFamily="sans-serif"
		    android:gravity="center|left"
		    android:text="Position:"
		    android:textColor="@color/list_item_level_1"
		    android:textSize="18sp"
		     />

		<TextView
		    android:id="@+id/institution"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:layout_marginRight="16dp"
		    android:layout_marginLeft="16dp"
		    android:fontFamily="sans-serif"
		    android:gravity="center|left"
		    android:maxHeight="30dp"
		    android:maxWidth="300dp"
		    android:text="Institution:"
		    android:textColor="@color/list_item_level_2"
		    android:textSize="14sp" />
		<TextView
		    android:id="@+id/datetime"
		    android:layout_width="match_parent"
		    android:layout_height="24dp"
		    android:layout_marginTop="12dp"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:gravity="center|left"
		    android:text="Date/Duration:"
		    android:fontFamily="sans-serif"
		    android:textColor="@color/list_item_level_1"
		    android:textSize="14sp" />
        <TextView
            android:id="@+id/postedby"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center|left"
            android:text="Posted by:"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/list_item_header"
            android:textSize="14sp" />
		<TextView
		    android:id="@+id/description"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="16dp"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:background="@drawable/diagram_roundcap"
		    android:text="@string/description"
		    android:fontFamily="sans-serif-light"
		    android:maxLines="10"
		    android:textColor="@color/list_item_level_1"
            android:scrollbars = "vertical"
		    android:textSize="14sp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center|left"
            android:text="Contact:"
            android:fontFamily="sans-serif"
            android:textColor="@color/list_item_level_1"
            android:textSize="14sp" />
		<TextView
		    android:id="@+id/contact"
		    android:layout_width="wrap_content"
		    android:layout_height="24dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:layout_gravity="left"
		    android:text="Email"
            android:fontFamily="sans-serif"
		    android:textColor="@color/list_action_text"
		    android:textSize="14sp" />
        <TextView
            android:id="@+id/weblink"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="left"
            android:text="Webpage"
            android:fontFamily="sans-serif"
            android:textColor="@color/list_action_text"
            android:textSize="14sp" />
	</LinearLayout>
</LinearLayout><!-- From: file:/Users/chishengjan/Desktop/AndroidStudioProjects/squint/app/src/main/res/layout/details_career.xml -->