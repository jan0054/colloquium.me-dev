<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_container"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@drawable/list_item"
    android:orientation="horizontal" >

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/dark_accent"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:gravity="left">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/more"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:text="@string/name"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/institution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@+id/more"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="@string/institution"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center|bottom"
            android:paddingBottom="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:text="@string/more"
            android:textColor="@color/dark_accent"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/huangyueh-yi/Documents/colloquium.me-dev/AndroidStudioProjects/squint/app/src/main/res/layout/item_people.xml -->