<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/feed_container"
	    android:layout_width="match_parent"
	    android:layout_height="304dp"
	    android:background="@drawable/list_item"
	    android:orientation="horizontal" >
		<View android:layout_width="match_parent"
		      android:layout_height="3dp"
		      android:background="@color/list_item_header" />

    	<TextView
    	    android:id="@+id/name"
    	    android:layout_width="match_parent"
    	    android:layout_height="30dp"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginRight="16dp"
    	    android:layout_marginTop="12dp"
    	    android:ellipsize="end"
    	    android:fontFamily="sans-serif-light"
    	    android:gravity="center|left"
    	    android:singleLine="true"
    	    android:text="@string/name"
    	    android:textColor="@color/list_item_level_1"
    	    android:textSize="18sp"
    	    />
	    
		<TextView
		    android:id="@+id/author_name"
		    android:layout_width="match_parent"
		    android:layout_height="24dp"
		    android:layout_alignLeft="@+id/name"
		    android:layout_alignRight="@+id/name"
		    android:layout_below="@+id/name"
		    android:layout_marginBottom="2dp"
		    android:layout_marginTop="10dp"
		    android:fontFamily="sans-serif-light"
		    android:gravity="center|left"
		    android:text="@string/author"
            android:textColor="@color/light_blue"
		    android:textSize="12sp" />

		<TextView
		    android:id="@+id/description"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/author_name"
		    android:layout_alignRight="@+id/name"
		    android:layout_below="@+id/author_name"
		    android:ellipsize="end"
		    android:fontFamily="sans-serif-light"
		    android:lineSpacingExtra="2sp"
		    android:maxLines="3"
		    android:text="@string/description"
		    android:textColor="@color/list_item_level_2"
		    android:textSize="12sp" />

	    <LinearLayout android:id="@+id/footer"
	        		  android:layout_width="match_parent"
	        		  android:layout_height="wrap_content"
	        		  android:layout_margin="8dp"
	        		  android:gravity="center"
	        		  android:layout_below="@+id/description"
	        		  android:weightSum="4"
	        		  android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/location_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="16dp"
	            android:layout_weight="1"
	            android:fontFamily="sans-serif-thin"
	            android:gravity="center|left"
	            android:text="@string/location"
                android:textColor="@color/light_blue"
	            android:textSize="12sp"
	            android:textStyle="bold" />

			<TextView
			    android:id="@+id/start_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="16dp"
			    android:layout_weight="2"
			    android:fontFamily="sans-serif-thin"
			    android:gravity="center"
			    android:text="@string/start_time"
                android:textColor="@color/light_blue"
			    android:textSize="12sp"
			    android:textStyle="bold" />
	        
			<TextView android:id="@+id/more"
				      android:layout_width="wrap_content"
				      android:layout_height="24dp"
				      android:layout_marginRight="10dp"
				      android:gravity="center|right"
				      android:layout_weight="1"
				      android:text="@string/more"
				      android:textColor="@color/list_action_text"
                      android:maxLines="1"
				      android:textSize="14sp" />
	    </LinearLayout>
</RelativeLayout>
