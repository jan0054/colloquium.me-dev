<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/light_bg">


        <Button
            android:id="@+id/cancelsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="sendChat"
            android:textColor="@color/accent_color"
            android:text="Cancel"
            android:background="@color/light_bg" />
        <EditText
            android:id="@+id/searchinput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:textColor="@color/accent_color"/>
        <Button
            android:id="@+id/dosearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="sendChat"
            android:textColor="@color/accent_color"
            android:text="Search"
            android:background="@color/light_bg" />


    </LinearLayout>
	<ListView android:id="@android:id/list"
	     	  android:layout_width="match_parent"
	     	  android:layout_height="wrap_content"
	     	  android:paddingTop="6dp"
	     	  android:layout_marginLeft="0dp"
	     	  android:layout_marginRight="0dp"
	     	  android:divider="@color/background"
	     	  android:dividerHeight="0dp" />
    <TextView android:id="@android:id/empty"
		      android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:layout_marginLeft="16dp"
	     	  android:layout_marginRight="16dp"
	     	  android:gravity="center"
		      android:textColor="@color/dark_txt"
		      android:textSize="18sp"
		      android:text="@string/list_empty" />  
</LinearLayout><!-- From: file:/Users/huangyueh-yi/Documents/colloquium.me-dev/AndroidStudioProjects/squint/app/src/main/res/layout/fragment_general.xml -->