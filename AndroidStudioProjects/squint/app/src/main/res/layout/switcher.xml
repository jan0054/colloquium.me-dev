<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       		  android:id="@+id/event_title"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:minHeight="36dp"
	          android:gravity="center"
	          android:orientation="horizontal"
	          android:paddingTop="10dp"
	          android:paddingLeft="16dp"
	          android:paddingRight="16dp"
	          android:paddingBottom="2dp"
	          android:layout_marginBottom="8dp"
	          android:weightSum="3" >
			  <!-- style="?android:attr/buttonBarStyle" -->          
    
        <Button android:id="@+id/switch_talk"
	            android:layout_width="0dip"
	            android:layout_height="36dp"
	            android:layout_weight="1"
	            android:background="@drawable/btn_switch_left_selector"
	            android:enabled="true"
	            android:gravity="center"
	            android:text="@string/switch_talk"
	            android:textColor="@drawable/btn_switch_title_selector"
	            android:textSize="12sp"
	            android:textStyle="bold" />
        		<!-- style="?android:attr/buttonBarButtonStyle" -->

        <Button android:id="@+id/switch_poster"
	            android:layout_width="0dip"
	            android:layout_height="36dp"
	            android:layout_weight="1"
	            android:background="@drawable/btn_switch_mid_selector"
	            android:gravity="center"
	            android:text="@string/switch_poster"
	            android:textColor="@drawable/btn_switch_title_selector"
	            android:textSize="12sp"
	            android:textStyle="bold" />
                <!-- style="?android:attr/buttonBarButtonStyle" -->
        
         <Button android:id="@+id/switch_abstract"
	            android:layout_width="0dip"
	            android:layout_height="36dp"
	            android:layout_weight="1"
	            android:background="@drawable/btn_switch_right_selector"
	            android:gravity="center"
	            android:text="@string/switch_abstract"
	            android:textColor="@drawable/btn_switch_title_selector"
	            android:textSize="12sp"
	            android:textStyle="bold" />
        		<!-- style="?android:attr/buttonBarButtonStyle" -->
</LinearLayout>
