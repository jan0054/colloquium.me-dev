<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_horizontal"
    android:paddingRight="@dimen/padding_horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/stage" >

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Contact name:"
        android:id="@+id/contactname_label"/>
    <EditText  android:id="@+id/contactname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="name"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Contact email:"
        android:id="@+id/contactemail_label"/>
    <EditText  android:id="@+id/contactemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="email"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Position:"
        android:id="@+id/position_label"/>
    <EditText  android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="position"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Institution:"
        android:id="@+id/institution_label"/>
    <EditText  android:id="@+id/institution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="institution name"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Start date/duration:"
        android:id="@+id/datetime_label"/>
    <EditText  android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="start time and/or duration"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Description:"
        android:id="@+id/description_label"/>
    <EditText  android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="job description"
        android:minWidth="120dp"
        android:maxWidth="260dp" />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="Optional web page: (Please enter full URL)"
        android:id="@+id/weblink_label"/>
    <EditText  android:id="@+id/weblink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:background="@android:color/white"
        android:hint="http://"
        android:minWidth="120dp"
        android:maxWidth="260dp" />


    <Button android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_signup_bg_selector"
        android:onClick="postCareer"
        android:textColor="@color/signup_button_text"
        android:text="Submit" />

</LinearLayout>