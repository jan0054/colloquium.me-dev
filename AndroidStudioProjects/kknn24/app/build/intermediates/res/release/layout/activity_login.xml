<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  xmlns:facebook="http://schemas.android.com/apk/res-auto"
    		  android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:paddingLeft="@dimen/padding_horizontal"
		      android:paddingRight="@dimen/padding_horizontal"
		      android:paddingTop="20dp"
		      android:paddingBottom="10dp"
		      android:orientation="vertical"
		      android:background="@color/background" >
	<TextView android:layout_width="match_parent"
	    	  android:layout_height="wrap_content"
	    	  android:layout_marginBottom="20dp"
	    	  android:clickable="true"
	    	  android:onClick="skip"
	    	  android:alpha="1"
	    	  android:gravity="left"
	    	  android:textColor="@color/light_txt"
	    	  android:text="@string/skip"
			  android:textSize="16dp"/>
	<TextView android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="50dp"
			android:alpha="1"
			android:gravity="left"
			android:textColor="@color/light_button_txt"
			android:text="@string/login_notice"
			android:textSize="16dp"/>
	<EditText  android:id="@+id/username"
	    	   android:layout_width="match_parent"
	    	   android:layout_height="wrap_content"
	    	   android:padding="12dp"
	    	   android:background="@color/light_bg"
	    	   android:singleLine="true"
	    	   android:inputType="textPersonName"
	    	   android:hint="@string/username"
	    	   android:minWidth="120dp"
	    	   android:maxWidth="260dp" />
	<View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/light_primary" />
	<EditText  android:id="@+id/password"
	    	   android:layout_width="match_parent"
	    	   android:layout_height="wrap_content"
	    	   android:padding="12dp"	    	   
	    	   android:background="@color/light_bg"
	    	   android:singleLine="true"
	    	   android:inputType="textPassword"
	    	   android:hint="@string/password"
	    	   android:minWidth="120dp"
	    	   android:maxWidth="260dp" />
	<Button android:id="@+id/btn_login"
	    	android:layout_width="match_parent"
	    	android:layout_height="50dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_marginBottom="30dp"
	    	android:background="@drawable/btn_login_bg_selector"
	    	android:onClick="login"
	    	android:textColor="@color/light_button_txt"
	    	android:text="@string/login" />
	<TextView android:layout_width="match_parent"
	    	  android:layout_height="wrap_content"
	    	  android:alpha="0.7"
	    	  android:gravity="center"
	    	  android:textColor="@color/light_txt"
	    	  android:text="@string/signup_reminder" />
	<Button android:id="@+id/btn_signup"
	    	android:layout_width="match_parent"
	    	android:layout_height="50dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_marginBottom="30dp"
	    	android:background="@drawable/btn_signup_bg_selector"
	    	android:onClick="toSignupPage"
	    	android:textColor="@color/light_button_txt"
	    	android:text="@string/signup" />	
	    	
</LinearLayout><!-- From: file:/Users/chishengjan/Desktop/colloquium.me-dev/AndroidStudioProjects/kknn24/app/src/main/res/layout/activity_login.xml -->