<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    xmlns:app="http://schemas.android.com/apk/res-auto"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    style="@style/ActionBar" >
    <TextView android:id="@+id/title"
        	  android:layout_width="140dp"
        	  android:layout_height="wrap_content"
        	  android:layout_centerInParent="true"
        	  android:gravity="center"
        	  android:text="@string/app_name"
        	  android:textSize="16sp"
        	  android:textColor="@color/light_txt" />

    <Spinner
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/careerspinner"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone"
        />
    <Spinner
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:id="@+id/dayspinner"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone"

        />

    <com.cmenvi.app.widget.TintableImageView
		android:id="@+id/opt_left"
									        android:layout_width="52dp"
									        android:layout_height="52dp"
									        android:padding="12dp"
									        android:layout_alignParentLeft="true"
									        android:contentDescription="@string/empty"
									        android:clickable="true"
									        android:visibility="gone"
									        android:src="@drawable/actionbar_list"
									        app:tint="@color/light_button_txt" />
    <com.cmenvi.app.widget.TintableImageView
		android:id="@+id/opt_extra_left"
									        android:layout_width="52dp"
									        android:layout_height="52dp"
									        android:padding="6dp"
									        android:layout_alignParentLeft="true"
									        android:contentDescription="@string/empty"
									        android:clickable="true"
									        android:visibility="gone"
									        android:src="@drawable/actionbar_back"
											app:tint="@color/light_button_txt" />
    <com.cmenvi.app.widget.TintableImageView
		android:id="@+id/opt_right"
									        android:layout_width="52dp"
									        android:layout_height="52dp"
									        android:padding="12dp"
									        android:layout_alignParentRight="true"
									        android:contentDescription="@string/empty"
									        android:clickable="true"
									        android:visibility="gone"
									        android:src="@drawable/actionbar_map"
									        app:tint="@color/tint_color_selector" />
    <com.cmenvi.app.widget.TintableImageView
		android:id="@+id/opt_extra_right"
									        android:layout_width="52dp"
									        android:layout_height="52dp"
									        android:padding="6dp"
									        android:layout_alignParentRight="true"
									        android:contentDescription="@string/empty"
									        android:clickable="true"
									        android:visibility="gone"
									        android:src="@drawable/actionbar_done"
									        app:tint="@color/tint_color_selector" />
