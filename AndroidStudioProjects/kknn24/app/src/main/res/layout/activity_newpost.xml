<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/background"
			  android:orientation="vertical" >
	<LinearLayout android:id="@+id/container"
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:layout_margin="0dp"
				  android:background="@drawable/list_item_gradient"
				  android:orientation="vertical" >
		<View android:layout_width="match_parent"
			  android:layout_height="3dp"
			  android:background="@color/background" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_margin="8dp">
			<ImageButton
				android:id="@+id/btn_photo"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="#00000000"
				android:onClick="selectPhoto"
				android:src="@drawable/icon_gallery"/>
			<ImageButton
				android:id="@+id/btn_camera"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="#00000000"
				android:onClick="selectCamera"
				android:src="@drawable/icon_camera"/>
			<TextView
				android:id="@+id/save_post"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:fontFamily="sans-serif"
				android:gravity="right|center"
				android:text="Save"
				android:textColor="@color/dark_accent"
				android:textSize="16sp"
				android:layout_gravity="right"
				android:layout_margin="20dp"
				android:layout_marginBottom="10dp"
				android:layout_marginTop="10dp"/>
		</LinearLayout>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:id="@+id/post_input"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:hint="@string/hint_newpost"
			android:textColorHint="@color/hint_color"
			android:textColor="@color/primary_text"
			android:background="#00000000"
			android:textColorHighlight="@color/light_primary"
			android:gravity="top"
			android:layout_gravity="center_horizontal" />

		<ImageView
			android:id="@+id/post_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>


	</LinearLayout>
</LinearLayout>
