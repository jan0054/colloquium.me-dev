<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:layout_width="match_parent"
		      android:layout_height="match_parent"
		      android:paddingLeft="@dimen/padding_horizontal"
		      android:paddingRight="@dimen/padding_horizontal"
		      android:paddingTop="20dp"
		      android:paddingBottom="10dp"
		      android:orientation="vertical"
		      android:background="@color/background" >
	<TextView android:layout_width="match_parent"
	    	  android:layout_height="wrap_content"
	    	  android:layout_marginBottom="60dp"
	    	  android:alpha="1"
	    	  android:gravity="left"
	    	  android:textColor="@color/light_button_txt"
	    	  android:text="@string/signup_notice"
			  android:textSize="16dp"/>
	<EditText  android:id="@+id/username"
	    	   android:layout_width="match_parent"
	    	   android:layout_height="wrap_content"
	    	   android:padding="12dp"
	    	   android:background="@color/light_bg"
	    	   android:singleLine="true"
	    	   android:inputType="textPersonName"
	    	   android:hint="@string/username"
	    	   android:minWidth="120dp"
	    	   android:maxWidth="260dp" />
	<View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/light_primary" />
	<EditText  android:id="@+id/password"
	    	   android:layout_width="match_parent"
	    	   android:layout_height="wrap_content"
	    	   android:padding="12dp"	    	   
	    	   android:background="@color/light_bg"
	    	   android:singleLine="true"
	    	   android:inputType="textPassword"
	    	   android:hint="@string/password"
	    	   android:minWidth="120dp"
	    	   android:maxWidth="260dp" />
	<View android:layout_width="match_parent"
		android:layout_height="1dip"
		android:background="@color/light_primary" />
	<EditText  android:id="@+id/email"
	    	   android:layout_width="match_parent"
	    	   android:layout_height="wrap_content"
	    	   android:padding="12dp"	    	   
	    	   android:background="@color/light_bg"
	    	   android:singleLine="true"
	    	   android:inputType="textEmailAddress"
	    	   android:hint="@string/email"
	    	   android:minWidth="120dp"
	    	   android:maxWidth="260dp" />
	<Button android:id="@+id/btn_signup"
	    	android:layout_width="match_parent"
	    	android:layout_height="50dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_marginBottom="30dp"
	    	android:background="@drawable/btn_signup_bg_selector"
	    	android:onClick="signup"
	    	android:textColor="@color/light_button_txt"
	    	android:text="@string/signup" />	
	<Button android:id="@+id/btn_cancel"
	    	android:layout_width="match_parent"
	    	android:layout_height="50dp"
	    	android:layout_marginTop="10dp"
	    	android:layout_marginBottom="30dp"
	    	android:background="@drawable/btn_login_bg_selector"
	    	android:onClick="toLoginPage"	    	
	    	android:textColor="@color/light_button_txt"
	    	android:text="@string/cancel" />	    	
</LinearLayout><!-- From: file:/Users/huangyueh-yi/Desktop/AndroidStudioProjects0520/kknn24_new/app/src/main/res/layout/activity_signup.xml -->